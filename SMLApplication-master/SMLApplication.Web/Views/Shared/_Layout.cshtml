<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Content/themes/base/css", "~/Content/css")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                @*<p class="site-title">@Html.ActionLink("SML Hospitals", "Index", "Home")</p>*@
                @*<img src="/Images/Hospital.jpg" height="75" width="216">*@
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        @if (Request.IsAuthenticated)
                        {
                            
                            if (this.User.IsInRole("Admin"))
                            {
                            <li>@Html.ActionLink("Specializations", "Index", "Specializations")</li>                        
                            <li>@Html.ActionLink("Doctors", "Index", "Doctors")</li>
                            <li>@Html.ActionLink("Patients", "Index", "Patients")</li>
                            <li>@Html.ActionLink("e-Channelling", "Index", "Appointments")</li>
                            <li>@Html.ActionLink("Role Manager", "RoleManager", "Account")</li>
                            }
                            else if (this.User.IsInRole("Doctor"))
                            {
                            <li>@Html.ActionLink("e-Channelling", "Index", "Appointments")</li>
                            }
                            else if (this.User.IsInRole("Patient"))
                            {
                            <li>@Html.ActionLink("e-Channelling", "Index", "Appointments")</li>
                            }
                        }

                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - SML pvt (LTD)</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @RenderSection("scripts", required: false)
</body>
</html>
