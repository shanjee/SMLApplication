@model IEnumerable<SMLApplication.Data.Models.Specialization>

@{
    ViewBag.Title = "Index";
}

<h2>Specializations</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayName("Specialization")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SpecializationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SpecializationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SpecializationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SpecializationId })
        </td>
    </tr>
}

</table>
